name:                woroni
version:             0.1
-- synopsis:            
-- description:         
license:             GPL-3
license-file:        LICENSE
author:              Mike Ledger
maintainer:          eleventynine@gmail.com
-- copyright:           
category:            Web
build-type:          Simple
-- extra-source-files:  
cabal-version:       >=1.10

executable woroni
  main-is:             Woroni/Main.hs 
  ghc-options: -Wall -O2 -threaded
  -- other-modules:       
  other-extensions:    DataKinds, DeriveDataTypeable, GADTs, GeneralizedNewtypeDeriving, NamedFieldPuns, OverloadedStrings, PolyKinds, QuasiQuotes, RecordWildCards, TemplateHaskell, TypeFamilies, DeriveGeneric, TypeOperators
  build-depends:       base >= 4.7 && < 5
                     , lens 
                     , text
                     , time 
                     , vector
                     , aeson
                     , bytestring
                     , hasql-postgres >= 0.11.0
                     , hasql-backend 
                     , hasql >= 0.8.0   
                     , template-haskell
                     , heist >= 0.14.0
                     , snap >= 0.14.0
                     , snaplet-recaptcha == 1.0.3
                     , snaplet-hasql == 0.0.3
                     , snap-core
                     , mtl
                     , blaze-builder
                     , blaze-html
                     , xmlhtml
                     , old-locale
                     , transformers
                     , markdown
                     , criterion
                     , attoparsec 
                     , attoparsec-expr
                     , random
  hs-source-dirs:      src
  default-language:    Haskell2010

