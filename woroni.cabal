-- Initial woroni.cabal generated by cabal init.  For further 
-- documentation, see http://haskell.org/cabal/users-guide/

name:                woroni
version:             0.1
-- synopsis:            
-- description:         
license:             GPL-3
license-file:        LICENSE
author:              Mike Ledger
maintainer:          eleventynine@gmail.com
-- copyright:           
category:            Web
build-type:          Simple
-- extra-source-files:  
cabal-version:       >=1.10

executable woroni
  main-is:             Main.hs 
  ghc-options: -Wall -O2
  -- other-modules:       
  other-extensions:    DataKinds, DeriveDataTypeable, GADTs, GeneralizedNewtypeDeriving, NamedFieldPuns, OverloadedStrings, PolyKinds, QuasiQuotes, RecordWildCards, TemplateHaskell, TypeFamilies, DeriveGeneric, TypeOperators
  build-depends:       base == 4.7.*
                     , lens == 4.8.*
                     , text == 1.2.*
                     , time 
                     , vector == 0.10.*
                     , aeson
                     , bytestring
                     , postgresql-simple
                     , postgresql-query
                     , template-haskell
                     , heist >= 0.14
                     , snap >= 0.14
                     , snaplet-postgresql-simple >= 0.6.0.1
                     , snaplet-recaptcha >= 1.0.3
                     , snap-core
                     , mtl
                     , transformers
                     , blaze-builder
                     , blaze-html
                     , old-locale

  hs-source-dirs:      src
  default-language:    Haskell2010
